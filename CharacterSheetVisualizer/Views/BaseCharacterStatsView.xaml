<UserControl x:Class="CharacterSheetVisualizer.Views.BaseCharacterStatsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        DataContext="{Binding BaseCharacterStats, Source={StaticResource Locator}}">
    <UserControl.Resources>
        <!-- DataGrid style -->
        <Style x:Key="DataGridStyle1" TargetType="{x:Type DataGrid}">
            <Setter Property="ColumnHeaderStyle" Value="{DynamicResource ColumnHeaderStyle1}"/>
        </Style>
        <!-- DataGridColumnHeader style -->
        <Style x:Key="ColumnHeaderStyle1" TargetType="DataGridColumnHeader">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="ToolTip" Value="Click to sort."/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Character.Stats}"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  AutoGenerateColumns="False"
                  Style="{DynamicResource DataGridStyle1}"
                  Grid.Column="0"
                  Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header=""
                                    Width="Auto"
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Binding="{Binding Type}"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Score"
                                    Binding="{Binding Score}"
                                    IsReadOnly="False"
                                    FontSize="15"
                                    Width="Auto"/>
                <DataGridTextColumn Header="Modifier"
                                    Binding="{Binding Modifier}"
                                    IsReadOnly="True"
                                    FontSize="15"
                                    Width="Auto"/>
                <DataGridTextColumn Header="Save"
                                    Binding="{Binding Save}"
                                    IsReadOnly="True"
                                    FontSize="15"
                                    Width="Auto"/>
                <DataGridTemplateColumn Header="Is Proficent">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsProficent, UpdateSourceTrigger=PropertyChanged}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid ItemsSource="{Binding Character.OtherProficiencies}"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  AutoGenerateColumns="False"
                  Style="{DynamicResource DataGridStyle1}"
                  Grid.Column="0"
                  Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn
                Header="Other Proficiencies"
                Width="Auto"
                FontSize="12"
                Binding="{Binding Name}"/>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</UserControl>
